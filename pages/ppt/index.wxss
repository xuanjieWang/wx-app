.ppt {
  display: flex;
  flex-wrap: wrap;
  width: 96%;
  margin: 2% 2% 0 2%;
}

.pageInfo {
  width: 49%;
  margin: 1% 0 0 1%;
  display: flex;
  flex-direction: column;
}

.imagePPT {
  width: 100%;
  height: 260rpx;
  border-radius: 5% 5% 0% 0%;
}

.title {
  font-size: small;
  height: 50rpx;
  padding-left: 5%;
  line-height: 50rpx;
  background: #fff;
  border-radius: 0% 0% 5% 5%;
}